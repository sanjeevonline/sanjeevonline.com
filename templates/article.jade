block content
  - var map = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December']
  article.post.shadow
      h1= page.title
      a.back(href='/archive.html') #{ map[page.date.getMonth()] } #{ page.date.toString().substring(8, 10) }
