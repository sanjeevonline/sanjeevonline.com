extends layout

block prepend title
  | #{ page.title } -

block header
   p(class="pull-right")
          a.back(href=locals.baseUrl + '/blog.html') << back to index
   p#post_bottom_meta2.muted
     | Tags :
     each tag in page.metadata.tags
       a(href=locals.baseUrl + "/tag/#{tag}.html", rel="category tag", title="View all posts in '#{tag}'")
         = tag
       |

block content
  - var map = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December']
  article.post.shadow
      div(style="text-align: center")
          h1= page.title
          a.back(href=locals.baseUrl + '/archive.html') #{ map[page.date.getMonth()] } #{ page.date.toString().substring(8, 10) }
          br
          include author
          | By &nbsp;
          mixin author(page.metadata.author)
      br
      section.content!= page.html
      hr
      include partials/bottom-social
  include partials/disqus
  hr
  h3 Similar Articles
  h4
  include partials/related
